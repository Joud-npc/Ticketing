<Window x:Class="Ticketing.Views.AdminDashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:Ticketing.ViewModels"
        xmlns:converters="clr-namespace:YourProject.Converters"
        xmlns:converters1="clr-namespace:Ticketing.Converters"
        Title="Tableau de bord Admin" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters1:NullToBoolConverter x:Key="NullToBoolConverter"/>
    </Window.Resources>
    
    <Window.DataContext>
        <viewModels:AdminDashboardViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- En-tête -->
        <Grid Grid.Row="0" Background="#FFEEEEEE">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Tableau de bord administrateur" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Content="Déconnexion" Command="{Binding LogoutCommand}" HorizontalAlignment="Right" Margin="660,0,0,0" Padding="10,5"/>
            </StackPanel>
        </Grid>
        
        <!-- Filtres -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0" Padding="5" VerticalContentAlignment="Center">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <Grid>
                                            <TextBlock Text="Rechercher par titre, nom, email..." 
                                                       Foreground="Gray" Margin="5,0,0,0" 
                                                       VerticalAlignment="Center"
                                                       Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>
            
            <ComboBox Grid.Column="1" ItemsSource="{Binding Statuts}" SelectedItem="{Binding SelectedStatus}" Width="150" Margin="0,0,10,0" Padding="5"/>
            
            <Button Grid.Column="2" Content="Rafraîchir" Command="{Binding RefreshCommand}" Padding="10,5" Margin="0,0,10,0"/>
        </Grid>
        
        <!-- Liste des tickets -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding Tickets}" SelectedItem="{Binding SelectedTicket}" 
                  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                  IsReadOnly="True" Margin="10" AlternatingRowBackground="AliceBlue">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id_Ticket}" Width="50"/>
                <DataGridTextColumn Header="Titre" Binding="{Binding Titre}" Width="150"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="100"/>
                <DataGridTextColumn Header="Prénom" Binding="{Binding Prenom}" Width="100"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="Catégorie" Binding="{Binding Categorie}" Width="120"/>
                <DataGridTextColumn Header="Date de création" Binding="{Binding DateCreation, StringFormat=dd/MM/yyyy HH:mm}" Width="150"/>
                <DataGridTextColumn Header="Statut" Binding="{Binding Statut}" Width="80"/>
                <DataGridTemplateColumn Header="Description" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Descriptions}" TextWrapping="Wrap" MaxHeight="40" 
                                       TextTrimming="CharacterEllipsis" ToolTip="{Binding Descriptions}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Détails et mise à jour du ticket -->
        <Border Grid.Row="3" BorderBrush="LightGray" BorderThickness="0,1,0,0" Padding="10" Background="#F5F5F5"
                IsEnabled="{Binding SelectedTicket, Converter={StaticResource NullToBoolConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Modifier le statut : " VerticalAlignment="Center"/>
                    <ComboBox Width="150" Margin="10,0" ItemsSource="{Binding Statuts}" SelectedItem="{Binding NewStatus}"
                              SelectedIndex="0">
                        <ComboBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ComboBox.ItemsPanel>
                    </ComboBox>
                </StackPanel>
                
                <Button Grid.Column="1" Content="Mettre à jour" Command="{Binding UpdateStatusCommand}" 
                        Padding="10,5" IsEnabled="{Binding SelectedTicket, Converter={StaticResource NullToBoolConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</Window>