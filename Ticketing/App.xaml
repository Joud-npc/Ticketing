<Application x:Class="Ticketing.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <FontFamily x:Key="MagicFont">
            pack://application:,,,/Ticketing;component/Resources/Fonte/HARRYP__.TTF#Harry P
        </FontFamily>
        
        <FontFamily x:Key="NormalFont">
            pack://application:,,,/Ticketing;component/Resources/Fonte/SegoeUIVF.ttf#Segoe UI Variable Text
        </FontFamily>
        
        <DropShadowEffect x:Key="ShadowEffect"
                          BlurRadius="20"
                          ShadowDepth="5"
                          Opacity="0.5"
                          Color="Black"/>
    </Application.Resources>
</Application>